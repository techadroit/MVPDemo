<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="@dimen/material_card_corner_radius"
    card_view:cardElevation="@dimen/material_card_elevation_resting"
    tools:ignore="Overdraw">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tvTitle"
            style="@style/detail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_element_spacing"
            android:layout_marginRight="@dimen/detail_element_margin"
            android:layout_marginLeft="@dimen/detail_element_margin"
            android:text="" />

        <TextView
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentLeft="true"
            android:id="@+id/tvDescription"
            style="@style/description_style"
            android:layout_toLeftOf="@+id/imvNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_element_margin"
            android:layout_marginBottom="@dimen/detail_element_spacing"
            android:layout_marginRight="@dimen/detail_element_margin"
            android:layout_marginLeft="@dimen/detail_element_margin"
            android:text="" />


        <ImageView
            android:layout_alignTop="@+id/tvDescription"
            android:layout_below="@id/tvTitle"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imvNews"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/detail_element_margin"
            android:layout_marginRight="@dimen/detail_element_margin"
            android:layout_marginBottom="@dimen/detail_element_spacing"
            android:contentDescription="Content Image" />

    </RelativeLayout>


</android.support.v7.widget.CardView>